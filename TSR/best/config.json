{
    "model" : {
        "main_name":            "TSR",
        "base":                 "CustomMobileNetv2",
        "labels":               ["brick", "forward", "forward_left", "forward_right", "left", "right", "negative"],
        "infer_shape":          [32, 32]
    },

    "train": {
        "train_folder":         "signs_ds",
        "cache_name":           "pkl/sign_train.pkl",

        "train_times":          3,
        "batch_size":           4,
        "learning_rate":        1e-4,
        "nb_epochs":            300,
        
        "debug":                false
    },

    "valid": {
        "valid_folder":         "signs_ds",
        "cache_name":           "pkl/sign_test.pkl",

        "valid_times":          1
    },

    "eval": {
        "valid_image_folder":   ".signs_ds",
        "cache_name":           "pkl/sign_eval.pkl"
    },

    "infer": {
        "input_sz":             416
    }
}
