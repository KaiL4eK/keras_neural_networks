{
    "model" : {
        "min_input_size":       [160, 224],
        "max_input_size":       [224, 288],
        "base":                 "MobileNetv2",
        "anchors":              [29,29, 40,44, 61,64],
        "labels":               ["brick", "forward", "forward and left", "forward and right", "left", "right"],
        "infer_shape":          [192, 256]
    },

    "train": {
        "train_image_folder":   "../rf_tsd_voc/Images/",
        "train_annot_folder":   "../rf_tsd_voc/Annotations_train/",
        "cache_name":           "pkl/sign_train.pkl",

        "train_times":          5,
        "batch_size":           4,
        "learning_rate":        1e-4,
        "nb_epochs":            1000,
        "warmup_epochs":        0,
        "ignore_thresh":        0.5,
        "gpus":                 "0",

        "grid_scales":          [1,1,1],
        "obj_scale":            7,
        "noobj_scale":          1,
        "xywh_scale":           5,
        "class_scale":          1,

        "tensorboard_dir":      "logs/TSD_yolo_mbv2",
        "saved_weights_name":   "chk/TSD_yolo_mbv2.h5",
        "debug":                false
    },

    "valid": {
        "valid_image_folder":   "../rf_tsd_voc/Images/",
        "valid_annot_folder":   "../rf_tsd_voc/Annotations_test",
        "cache_name":           "pkl/sign_test.pkl",

        "valid_times":          1
    },

    "eval": {
        "valid_image_folder":   "../rf_tsd_voc/Images/",
        "valid_annot_folder":   "../rf_tsd_voc/Annotations_test",
        "cache_name":           "pkl/sign_eval.pkl"
    }
}
